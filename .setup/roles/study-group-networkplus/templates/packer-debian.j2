{
  "builders": [{
    "vm_name": "{{ box.name }}",
    "type": "virtualbox-iso",
    "guest_os_type": "{{ box.guest_os_type }}",
    "iso_urls": [
      "{{ downloads }}/{{ box.iso_name }}",
      "{{ box.iso_location }}/{{ box.iso_name }}"
    ],
    "iso_checksum": "{{ box.iso_checksum }}",
    "iso_target_path": "{{ downloads }}/{{ box.iso_name }}",

    "http_directory" : ".",
    "http_port_min" : 9001,
    "http_port_max" : 9001,

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "60m",
    "headless": true,
    
    "cpus": "{{ box.cpus }}",
    "memory": {{ box.ram }},
    "disk_size" : "{{ box.disk_size }}",
    "hard_drive_interface": "sata",
    "sata_port_count": 4,
    "hard_drive_nonrotational": true,

    {% if virtualization == "virtualbox" %}
    {# Note: We actually want all the {{ ... }} in this JSON block
             in the output so we are escaping the block between {% raw %}
             and {% endraw %}
    #}
    {% raw %}
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--vram", "10"],
      ["modifyvm", "{{.Name}}", "--vrde", "off"],
      ["modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga"],
      ["setextradata", "{{.Name}}", "GUI/ScaleFactor", "3.0"]
    ],
    {% endraw %}
    {% endif %}
    "boot_wait": "10s",
    "boot_command": [
        "<esc><wait>",
        "install <wait>",
        " preseed/url=http://{{ '{{' }} .HTTPIP }}:{{ '{{' }} .HTTPPort }}/{{ box.install_file }} <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "auto <wait>",
        "locale=en_US.UTF-8 <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ '{{' }} .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "<enter><wait>"
    ],
    "shutdown_command": "echo vagrant | sudo -S shutdown -P now"
  }],
  "provisioners": [
    {  "type": "file",
       "source": "{{ key_dir }}/vagrant.pub",
       "destination": "/tmp/vagrant.pub"
    },
    {% raw %}
    {  "type": "shell",
       "inline": ["mkdir -m 0700 /home/vagrant/.ssh",
                  "mv /tmp/vagrant.pub /home/vagrant/.ssh/authorized_keys",
                  "chmod 644 /home/vagrant/.ssh/authorized_keys"]
    },
    {  "type": "shell",
       "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
       "inline": [ "echo 'vagrant ALL=(ALL) NOPASSWD:ALL' > /etc/sudoers.d/vagrant",
                  "chmod 0440 /etc/sudoers.d/vagrant"]
    },
    {  "type": "shell",
       "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
       "inline": [ "apt-get install -y python-apt" ]
    },
    {  "type": "shell",
       "only": [ "virtualbox-iso" ],
       "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
       "inline": [ "mount -t iso9660 -o ro /home/vagrant/VBoxGuestAdditions.iso /mnt",
                   "cd /mnt",
                   "apt-get install -y linux-headers-$(uname -r)",
                   "./VBoxLinuxAdditions.run || /bin/true"]
    }
    {% endraw %}
  ],
  "post-processors": [{
    "type": "vagrant",
    "output": "{{ box.name }}.box"
  }]
}
